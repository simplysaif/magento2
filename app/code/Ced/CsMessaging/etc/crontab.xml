<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
	<!-- custom group for customer emails -->
    <group id="messaging_cron_group"> 
        <job name="customer_message_cron_job" instance="Ced\CsMessaging\Cron\SendMessageToCustomer" method="execute">
            <schedule>*/30 * * * *</schedule> <!-- run 30th minutes -->
        </job>
    </group>

     <!-- custom group for vendors emails -->
    <group id="messaging_cron_group"> 
        <job name="vendor_message_cron_job" instance="Ced\CsMessaging\Cron\SendMessageToVendor" method="execute">
            <schedule>*/30 * * * *</schedule> <!-- run 30th minutes -->
        </job>
    </group>
</config>