<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
    	<ced_csvproducts>
    		<vproducts>
				<relatedproducts>1</relatedproducts>
				<upsells>1</upsells>
				<crosssells>1</crosssells>
				<customoptions>1</customoptions>
				<types>
				    <simple>*</simple>
			        <downloadable>*</downloadable>
				    <virtual>*</virtual>
					<configurable>*</configurable>
					<bundle>*</bundle>
					<grouped>*</grouped>
				</types>
				<category_mode>1</category_mode>
			</vproducts>
		</ced_csvproducts>
        <ced_csmarketplace>
			<general>
				<ced_vproduct_activation>1</ced_vproduct_activation>
			</general>
		</ced_csmarketplace>
		<ced>
		   	<rewrites>
		    	<csproduct>
		     		<vproducts>
		      			<all>Adminhtml,Widget,Backend,RequireJs</all>
		     		</vproducts>
		     		<bundle_selection>
		      			<all>Adminhtml,Widget,Backend,RequireJs</all>
		     		</bundle_selection>
		     		<category>
		     			<all>Adminhtml,Widget,Backend,RequireJs</all>
		     		</category>
		     		<configurable_associated>
		     			<all>Adminhtml,Widget,Backend,RequireJs</all>
		     		</configurable_associated>
		     		<downloadable_file>
		     			<all>Adminhtml,Widget,Backend,RequireJs</all>
		     		</downloadable_file>
		     		<grouped_edit>
		     			<all>Adminhtml,Widget,Backend,RequireJs</all>
		     		</grouped_edit>
		     		<wysiwyg_images>
		      			<all>Adminhtml,Widget,Backend,RequireJs</all>
		     		</wysiwyg_images>
		    	</csproduct>
		   	</rewrites>
		</ced>
		<vendor_acl>
       		<resources>
				<all>
					<title>Allow Everything</title>
				</all> 
				<vendor>
					<title>Vendor Panel</title>
					<path>#</path>
					<sort_order>1</sort_order>
					<children>
						<vendor_new_product>
								<title>New Product</title>
								<sort_order>50</sort_order>
								<path>#</path>
								<paths>#</paths>
								 <ifconfig>ced_csmarketplace/general/ced_vproduct_activation</ifconfig>
								<dependsonparent>
								   <vendor_new_product>
											<title>New Product</title>
											<sort_order>40</sort_order>
											<path>csmarketplace/vproducts/new</path>
								   </vendor_new_product>
								</dependsonparent>
								
								 <children>
									<product_creation>
										<title>Allow All Type Of Product Creation</title>
										<sort_order>10</sort_order>
										<path>csproduct/vproducts/new</path>
									</product_creation>
								</children> 
							</vendor_new_product>
							<vendor_products>
							<ifconfig>ced_csmarketplace/general/ced_vproduct_activation</ifconfig>
							   <dependsonparent>
							      <vendor_products>
											<title>Manage Products</title>
											<sort_order>50</sort_order>
											<path>csmarketplace/vproducts/index</path>
								</vendor_products>
							   </dependsonparent>
								<title>Manage Products</title>
								<sort_order>50</sort_order>
								<path>csproduct/vproducts/index</path>
								<paths>csproduct/vproducts/index</paths>
							</vendor_products>
					</children>
				</vendor>
			</resources>
    	</vendor_acl>
    </default>
</config>
