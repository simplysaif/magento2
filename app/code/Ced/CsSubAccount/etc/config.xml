<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Store/etc/config.xsd">
   	<default>
		  <ced_cssubaccount>
			 <general>
				<cssubaccount_active>1</cssubaccount_active>
			 </general>
		  </ced_cssubaccount>
		  <vendor_acl>
       		<resources>
				<all>
					<title>Allow Everything</title>
				</all> 
				<vendor>
					<title>Vendor Panel</title>
					<path>#</path>
					<sort_order>1</sort_order>
					<children>
						<vendor_subaccount_profile>
							<title>Sub-Vendor Profile</title>
							<sort_order>60</sort_order>
							<path>cssubaccount/customer/profile</path>
						</vendor_subaccount_profile>
					</children>
				</vendor>
			</resources>
    	</vendor_acl>
    </default>
</config>
