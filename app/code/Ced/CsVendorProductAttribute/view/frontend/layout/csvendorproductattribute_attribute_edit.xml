<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="vendor-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
   <update handle="csmarketplace_vendor"/>
   <body>
        <referenceContainer name="vendor.panel.left">
            <block class="Ced\CsVendorProductAttribute\Block\Product\Attribute\Edit\Tabs" name="attribute_edit_tabs" cacheable="false">
                <container label="Main" name="main">
                    <block class="Ced\CsVendorProductAttribute\Block\Product\Attribute\Edit\Tab\Main" as="base"/>
                    <block class="Magento\Eav\Block\Adminhtml\Attribute\Edit\Options\Options" as="advanced"/>
                    <block class="Ced\CsVendorProductAttribute\Block\Product\Attribute\Edit\Tab\Advanced" as="options"/>
                </container>
                <block class="Magento\Eav\Block\Adminhtml\Attribute\Edit\Options\Labels" as="labels"/>
                <block class="Ced\CsVendorProductAttribute\Block\Product\Attribute\Edit\Tab\Front" as="front"/>
            </block>
        </referenceContainer>
        <referenceContainer name="vendor.dashboard.wrapper">
            <block class="Ced\CsVendorProductAttribute\Block\Product\Attribute\Edit" name="attribute_edit_content"/>
            <block class="Magento\Framework\View\Element\Template" name="include_globals_js" template="Ced_CsVendorProductAttribute::include_globals.phtml"/>
        </referenceContainer>
        <referenceContainer name="js">
            <block class="Ced\CsVendorProductAttribute\Block\Template" name="attribute_edit_js" template="Ced_CsVendorProductAttribute::catalog/product/attribute/js.phtml"/>
        </referenceContainer>
         <referenceContainer name="page.main.actions">
            <block class="Magento\Framework\View\Element\Template" name="page.actions.toolbar" template="Magento_Backend::pageactions.phtml" after="-"/>
        </referenceContainer> 
    </body>
</page>
