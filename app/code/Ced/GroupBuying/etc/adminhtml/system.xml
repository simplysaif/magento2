<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Config/etc/system_file.xsd">
    <system>
    	<tab id="ced_groupbuy" translate="label" sortOrder="100">
    		 <label>GroupBuy</label>
        </tab>		 
        <section id="cedgroupbuy"  showInDefault="1">
        	<class>separator-top</class>
            <label>Group Buy</label>
            <tab>ced_groupbuy</tab>
            <resource>Ced_GroupBuying::config</resource>
            <group id="general"  showInDefault="1">
                <field id="groupbuy_activation" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable GroupBuy</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>			
        </section>
    </system>
</config>
