<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Support System</title>
    </head>
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" after="-" name="customer-account-helpdeskfield-index-link" ifconfig="helpdesk/general/enable">
                <arguments>
                    <argument name="path" xsi:type="string">helpdesk/tickets/index</argument>
                    <argument name="label" xsi:type="string" translate="true">Support System</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
