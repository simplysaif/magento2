<form action="<?php echo $this->getLoginUrl(); ?>" method="post" id="form-validate">
    <div class="fieldset">
        <?php echo $this->getBlockHtml('formkey')?>
        <h2 class="legend"><?php echo $block->escapeHtml(__('Login with myOpenId')) ?></h2>
        <ul class="form-list">
            <li>
                <label for="identity" class="required"><em>*</em><?php echo $block->escapeHtml(__('Enter your MyOpenId username')) ?></label>
                <div class="input-box">
                    <input type="text" name="identity" id="identity" title="<?php echo $block->escapeHtml(__('Enter my username')) ?>" class="input-text required-entry" />
					<div id="advice-required-entry-identity" style="display:none" class="validation-advice" style="">This is a required field.</div>
				</div>
            </li>
        </ul>
    </div>
    <div class="buttons-set">
        <p class="required"><?php echo $block->escapeHtml(__('* Required Fields')) ?></p>
        <button type="submit" title="<?php echo $block->escapeHtml(__('Sumbit')) ?>" onClick="return checkForm();" class="button"><span><span><?php echo $block->escapeHtml(__('Sumbit')) ?></span></span></button>
    </div>
</form>
<script type="text/javascript">
	function checkForm(){
		if(!$('identity').value){
			$('advice-required-entry-identity').show();
			return false;
		}else{
			$('advice-required-entry-identity').hide();
			return true;
		}
	}
</script>