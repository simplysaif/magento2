                                    <?php echo $this->getAnchorTextForNext() ?>
                                <?php endif;?>
                            </a>
                        </li>
                    <?php else:?>
                       <li class="paginate_button next disabled" style="background-color:grey;" >
                        <a class="next<?php if(!$this->getAnchorTextForNext()): ?> i-next<?php endif; ?>" href="#" title="<?php echo __('Next') ?>">
                            <?php if(!$this->getAnchorTextForNext()): ?>
                                <img src="<?php echo $this->getSkinUrl('images/ced/csmarketplace/pager_arrow_right.gif') ?>" alt="<?php echo __('Next') ?>" class="v-middle" />
                            <?php else: ?>
                                <?php echo $this->getAnchorTextForNext() ?>
                            <?php endif;?>
                        </a>
                    </li>
                <?php endif;?>
            </ul>
        </div>
    </div>
<?php else: ?>
   <div class="col-md-4 center-pager"></div>
<?php endif; ?>
