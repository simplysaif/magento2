<script type="text/javascript">
	require([
		'jquery',
		'flot',
		'flotResize' 
		], function($,flot,resize){ 
			$('#range a').on('click', function(e) {
				$('#activity-loading').show();
				e.preventDefault();
				$(this).parent().parent().find('li').removeClass('active');
				$(this).parent().addClass('active');
				$.ajax({
					type: "get",
					url: "<?php echo $this->getUrl('*/*/chart',array('_secure'=>true)); ?>?range=" + $(this).attr('href'),
					dataType: 'json',
					success: function(json) {
						var option = {	
							shadowSize: 0,
							colors: ['#369BDC'],
							bars: { 
								show: true,
								fill: true,
								lineWidth: 1
							},
							grid: {
								backgroundColor: '#FFFFFF',
								hoverable: true
							},
							points: {
								show: false
							},
							xaxis: {
								show: true,
								ticks: json['xaxis']
							}
						}
						$.plot('#chart-sale', [json['order']], option);	
						$('#chart-sale').bind('plothover', function(event, pos, item) {
							$('.tooltip').remove();
							if (item) {
								$('<div id="tooltip" class="tooltip top in"><div class="tooltip-arrow"></div><div class="tooltip-inner">' + item.datapoint[1].toFixed(2) + '</div></div>').prependTo('body');
								$('#tooltip').css({
									position: 'absolute',
									left: item.pageX /* - (jced('#tooltip').outerWidth()/2) */,
									top: item.pageY - $('#tooltip').outerHeight(),
									pointer: 'cusror',
								}).fadeIn('slow');	
								$('#chart-sale').css('cursor', 'pointer');		
							} else {
								$('#chart-sale').css('cursor', 'auto');
							}
						});
						$('#activity-loading').hide();
					},
					error: function(xhr, ajaxOptions, thrownError) {
						console.log(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
					}
				});
			});
			checkChart();
			function checkChart(){
				setTimeout( function(){ 
					if(typeof jQuery.fn.vectorMap=='undefined')
					{
						checkChart();
					}
					else
					{
						$('#range a#firstactionchart').trigger('click');  						   		
					}
				}  , 1000 );
			}
		});      
	</script> 
