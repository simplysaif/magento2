	<div id="vendor-data" style="display: none !important;">
		<div class="checkbox">
		<label>
			<input onchange="ced_csmarketplace.showVendorFrom(this);" type="checkbox" name="is_vendor" title="<?php echo __('Become a Vendor'); ?>" value="1" id="is_vendor">  <?php echo __('Become a Vendor'); ?>
